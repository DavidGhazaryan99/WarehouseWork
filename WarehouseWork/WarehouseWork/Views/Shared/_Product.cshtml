@model WarehouseWork.Models.Product

 <tr>
    <td>
        @Html.DisplayFor(modelItem => Model.id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.manufactured.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.manufactured.country.name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.category)
    </td>
    <td>
        @Html.DisplayFor(modelItem => Model.price)
    </td>
        <td>
        @Html.DisplayFor(modelItem => Model.count)
    </td>
        <td>
        @Html.DisplayFor(modelItem => Model.registrationDate)
    </td>

    <td>
        <div class="btn-group">
            @*<a asp-action="Edit" asp-route-id="@Model.Code" class="btn btn-sm btn-info">Edit</a>*@
            @*<a asp-action="Details" asp-route-id="@Model.Code" class="btn btn-sm btn-primary m1-1">Details</a>*@

            <form asp-action="EditProduct" asp-route-id="@Model.id"
                data-ajax="true" 
                data-ajax-update="#DivDetailView"
                data-ajax-success="ShowDetailForm()">
                <button type="submit" class="btn btn-sm btn-info">
                    Edit
                </button>
            </form>

            <form asp-action="ViewProduct" asp-route-id="@Model.id"
                data-ajax="true"
                data-ajax-update="#DivDetailView"
                data-ajax-success="ShowDetailForm()">
                <button type="submit" class="btn btn-sm btn-primary ml-1">
                    Details
                </button>
            </form>
            
            <form asp-action="DeleteProduct" asp-route-id="@Model.id"
                 data-ajax="true" 
                 data-ajax-success="deleteItem(this)" >
                <button type="submit" class="btn btn-sm btn-danger ml-1"
                onclick="return confirm('Delete Confirmation for Product @Model.id');" >
                    Delete
                </button>
            </form>
        </div>
    </td>
</tr>